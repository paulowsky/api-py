root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

; Python: PEP8 defines 4 spaces for indentation
[*.{py,java,r,R,toml}]
indent_style = space
indent_size = 4

[*.{md,Rmd,rst}]
trim_trailing_whitespace = false
